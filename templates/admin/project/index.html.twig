{% extends 'admin/base.html.twig' %}
{% block body %}
    <h2>All Projects Information</h2>
    <a class="btn btn-success btn-sm" href="{{ path('admin_project_create') }}">new project</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Count of Tasks</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for project in projects %}
                <tr>
                    <td>{{ project.name }}</td>
                    <td>{{ project.description }}</td>
                    <td>{{ project.tasks|length }}</td>
                    <td>
                        <a class="btn btn-success btn-sm" href="{{ path('admin_project_edit', {'id': project.id}) }}">select</a>
                        <a class="btn btn-danger btn-sm" href="{{ path('admin_project_delete', {'id': project.id}) }}">delete</a>
                    </td>
                </tr>
            {% endfor %}   
        </tbody>
    </table>
{% endblock %}
